---
const { company, job, from, to } = Astro.props;
---
<header class="flex justify-between">
    <div class="flex flex-col gap-1">
        <h3 class="text-[18px] font-medium">{company}</h3>
        <span class="">{job}</span>
    </div>
    <time class="text-right font-body text-text-body text-[14px]">{from} - {to}</time>
</header>